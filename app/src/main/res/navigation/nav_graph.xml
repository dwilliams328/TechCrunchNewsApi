<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/ListNewsArticlesFragment">

    <fragment
        android:id="@+id/ListNewsArticlesFragment"
        android:name="com.example.techcrunchnewsapi.ui.newsarticles.ListNewsArticlesFragment"
        tools:layout="@layout/fragment_list_news_articles">

        <action
            android:id="@+id/action_ListNewsArticlesFragment_to_NewsArticleFragment"
            app:destination="@id/NewsArticleFragment" />

        <action
            android:id="@+id/action_ListNewsArticlesFragment_to_RegisterFragment"
            app:destination="@id/RegisterFragment" />

        <action
            android:id="@+id/action_ListNewsArticlesFragment_to_LoginFragment"
            app:destination="@id/LoginFragment" />
    </fragment>

    <fragment
        android:id="@+id/NewsArticleFragment"
        android:name="com.example.techcrunchnewsapi.ui.newsarticles.NewsArticleFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_news_article">

        <action
            android:id="@+id/action_NewsArticleFragment_to_ListNewsArticlesFragment"
            app:destination="@id/ListNewsArticlesFragment" />
    </fragment>

    <fragment
        android:id="@+id/RegisterFragment"
        android:name="com.example.techcrunchnewsapi.ui.register.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register">

        <action
            android:id="@+id/action_RegisterFragment_to_AuthenticatedUserFragment"
            app:destination="@id/AuthenticatedUserFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/AuthenticatedUserFragment"
        android:name="com.example.techcrunchnewsapi.ui.AuthenticatedUserFragment"
        android:label="fragment_signed_in_user"
        tools:layout="@layout/fragment_authenticated_user">

        <action
            android:id="@+id/action_AuthenticatedUserFragment_to_ListNewsArticlesFragment"
            app:destination="@id/ListNewsArticlesFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/LoginFragment"
        android:name="com.example.techcrunchnewsapi.ui.login.LoginFragment"
        android:label="LoginFragment">

        <action
            android:id="@+id/action_LoginFragment_to_AuthenticatedUserFragment"
            app:destination="@id/AuthenticatedUserFragment"
            app:launchSingleTop="true"
            app:popUpTo="@+id/nav_graph"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>